{
  "compilerOptions": {
    "target": "es2016",
    "module": "ES6",
    "rootDir": "./backend",
    "outDir": "./backend/dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["./backend/**/*.ts"],
  "exclude": ["node_modules", "dist", "./frontend"]
}
